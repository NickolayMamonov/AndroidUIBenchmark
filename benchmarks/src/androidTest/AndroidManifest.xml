<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <!-- Benchmark-specific permissions -->
    <uses-permission android:name="android.permission.BENCHMARK_PROFILING" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />

    <!-- Tell the benchmark framework which tests to run -->
    <queries>
        <package android:name="com.research.uibenchmark.compose" />
        <package android:name="com.research.uibenchmark.xml" />
        <package android:name="com.research.uibenchmark.bdui" />
    </queries>

    <instrumentation
        android:name="androidx.benchmark.junit4.AndroidBenchmarkRunner"
        android:targetPackage="com.research.uibenchmark.benchmarks"
        android:label="UI Benchmarks">
        <!-- Добавляем мета-данные для разделения тестов -->
        <meta-data
            android:name="androidx.benchmark.separateProcesses"
            android:value="true" />
    </instrumentation>
</manifest>
